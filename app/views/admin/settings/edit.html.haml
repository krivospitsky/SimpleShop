=simple_form_for :settings do |settings_form|
  = settings_form.input :site_title, input_html: { value: Settings.site_title }
  = settings_form.input :site_title_2, input_html: { value: Settings.site_title_2 }
  = settings_form.input :site_url, input_html: { value: Settings.site_url }
  = settings_form.input :owner_phone, input_html: { value: Settings.owner_phone }
  = settings_form.input :owner_email, input_html: { value: Settings.owner_email }

  = settings_form.input :metrika, input_html: { value: Settings.metrika }, as: :text
  = settings_form.input :google_verification, input_html: { value: Settings.google_verification }
  = settings_form.input :yandex_verification, input_html: { value: Settings.yandex_verification }

  = settings_form.input :theme, input_html: { value: Settings.theme }


  = settings_form.input :smtp_host, input_html: { value: Settings.smtp_host }
  = settings_form.input :smtp_port, input_html: { value: Settings.smtp_port }
  = settings_form.input :smtp_domain, input_html: { value: Settings.smtp_domain }
  = settings_form.input :smtp_user_name, input_html: { value: Settings.smtp_user_name }
  = settings_form.input :smtp_password, input_html: { value: Settings.smtp_password }
  = settings_form.input :smtp_authentication, input_html: { value: Settings.smtp_authentication }

  = settings_form.input :contacts, as: :text, input_html: { value: Settings.contacts }
  = settings_form.input :copy1, input_html: { value: Settings.copy1 }
  = settings_form.input :copy2, input_html: { value: Settings.copy2 }


  = settings_form.input :disable_categories, as: :boolean, input_html: { checked: Settings.disable_categories }
  = settings_form.input :disable_filters, as: :boolean, input_html: { checked: Settings.disable_filters }
  = settings_form.input :disable_cart, as: :boolean, input_html: { checked: Settings.disable_cart }
  

  = settings_form.input :hide_count_in_product, as: :boolean, input_html: { checked: Settings.hide_count_in_product }
  = settings_form.input :enable_variants, as: :boolean, input_html: { checked: Settings.enable_variants }
  = settings_form.button :submit