%tr.nested-fields
  %td= f.text_field :name, class: "form-control"
  %td= f.text_field :sku, class: "form-control"
  %td= f.text_field :price, class: "form-control"
  %td= f.text_field :count, class: "form-control"
  %td= f.check_box :enabled, class: "form-control"
  %td= link_to_remove_association "Удалить", f, class: "btn btn-danger btn-xs"

