= paginate @promotions
%table.table.table-striped
  %thead
    %tr
      %th= Promotion.human_attribute_name(:name)
      %th= Promotion.human_attribute_name(:enabled)
      %th= Promotion.human_attribute_name(:start_at)
      %th= Promotion.human_attribute_name(:end_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @promotions.each do |promotion|
      %tr
        %td= promotion.name
        %td
          -if promotion.enabled
            %i.glyphicon.glyphicon-ok
        %td= l(promotion.start_at, format: "%d.%m.%Y") if promotion.start_at
        %td= l(promotion.end_at, format: "%d.%m.%Y") if promotion.end_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_promotion_path(promotion), :class => 'btn btn-xs btn-default'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_promotion_path(promotion), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'
= paginate @promotions

= link_to t('.new', :default => t("helpers.links.new")), new_admin_promotion_path, :class => 'btn btn-primary'
