-if flash[:info]
  .alert.alert-success= flash[:info]


-if !@order.name.empty?
  %dl.dl-horizontal
    %dt Имя
    %dd
      =@order.name

-if !@order.email.empty?
  %dl.dl-horizontal
    %dt E-mail
    %dd
      =@order.email

-if !@order.phone.empty?
  %dl.dl-horizontal
    %dt Телефон
    %dd
      =@order.phone

-if !@order.zip.empty?
  %dl.dl-horizontal
    %dt Индекс
    %dd
      =@order.zip

-if !@order.city.empty?
  %dl.dl-horizontal
    %dt Город
    %dd
      =@order.city

-if !@order.address.empty?
  %dl.dl-horizontal
    %dt Адрес
    %dd
      =@order.address

-if !@order.comment.empty?
  %dl.dl-horizontal
    %dt Коментарий
    %dd
      =@order.comment

%dl.dl-horizontal
  %dt Статус
  %dd
    = @order.state

%table.table.table-condensed
  %tr
    %td{colspan: 2} Товар
    %td Цена
    %td Количество
    %td Сумма
  -@order.cart.cart_items.all.each do |item|
    %tr
      %td
        =link_to product_path(item.product) do
          =image_tag item.product.images.first.image.url(:thumb)
      %td
        =link_to product_path(item.product) do
          -if item.variant.name && item.variant.name!=''
            =link_to item.variant.name, product_path(item.product)
          -else
            =link_to item.product.name, product_path(item.product)
          %br
          %small
            Артикул:
            =item.variant.sku
      %td
        %small
          =raw item.variant.price_str
      %td
        %small
          = item.quantity
      %td
        %small
          =raw item.variant.price_str(item.quantity)
  %tr
    %td{colspan:4}
      .pull-right
        Итог
    %td
      =@order.cart.total_price_str

