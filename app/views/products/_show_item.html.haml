-if product.sku['expert']
  -thumb=:expertfisher_product_list
-else  
  -thumb=:product_list

.col-md-4.col-sm-6.col-xs-12.product_item.fly-to-cart
  .thumbnail
    .name.text-center
      =link_to product.name, product_path(product, category)
    -if product.images.first
      =link_to product_path(product, category) do
        =image_tag(product.images.first.image.url(thumb), class: 'image')
    -else
      =link_to product_path(product, category) do
        =image_tag("product_list_no_photo_#{Settings.theme}.png", class: 'image')
    .price_block
      .old_price.text-center
        =raw product.old_price_str
      .price.text-center
        =raw product.price_str
      .text-center
        =render 'product_list_add_to_cart', product: product, category: category
