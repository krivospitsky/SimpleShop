	<% Category.enabled.each do |cat| %>
		<url>
			<%- if cat.path %>
				<loc><%= Settings.site_url + "/catalog/#{cat.path}/#{cat.id}" %></loc>
			<%-else%>
				<loc><%= Settings.site_url + "/catalog/#{cat.id}" %></loc>
			<%-end%>
			<lastmod><%= cat.updated_at.strftime("%Y-%m-%dT%H:%M:%S%:z") %></lastmod>
			<changefreq>weekly</changefreq>
		</url>
	<% end %>
	<% Product.enabled.each do |prod| %>
		<url>
			<loc><%= Settings.site_url + canonical_product_path(prod) %></loc>
			<lastmod><%= prod.updated_at.strftime("%Y-%m-%dT%H:%M:%S%:z") %></lastmod>
			<changefreq>monthly</changefreq>
		</url>
	<% end %>
