.col-md-6.col-sm-6.col-lg-4.product_item_outer
  .product_item.fly-to-cart
    =link_to product_path(product, category) do
      .text-center.image_outer= image_tag(product.main_image_url(:product_list), class: 'image')
    .name.text-center= link_to product.name, product_path(product, category)
    .price_block.text-center
      %span.old_price= raw product.old_price_str
      %span.price= raw product.price_str
